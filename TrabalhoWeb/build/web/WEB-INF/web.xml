<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ecommerce.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleCarrinho</servlet-name>
        <servlet-class>ecommerce.servlets.ControleCarrinho</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleProduto</servlet-name>
        <servlet-class>ecommerce.servlets.ControleProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleAdmin</servlet-name>
        <servlet-class>ecommerce.servlets.ControleAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarProduto</servlet-name>
        <servlet-class>ecommerce.servlets.AlterarProduto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleCarrinho</servlet-name>
        <url-pattern>/ControleCarrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleProduto</servlet-name>
        <url-pattern>/ControleProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleAdmin</servlet-name>
        <url-pattern>/ControleAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarProduto</servlet-name>
        <url-pattern>/AlterarProduto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
